-# Create new learning steps and see all steps created

= provide(:title, "#{@current_user.name} | Teaching Steps")

%div.container

  %h1 Create Learning Steps

  %div.half-split-left.semi-tall.top-margin.styled-select
    = form_for(@p_step) do |f|

      = render 'shared/error_messages', object: f.object

      = f.label :title
      = f.text_field :title

      = f.label :knowledge_category
      = f.text_field :category_knowledge

      = f.label :learning_style
      = f.select :type_learning, learning_types_array, :prompt => 'Select One'


      = f.label :description
      = f.text_area :content, :rows => 5

      = f.submit "Create Step", class: "btn btn-large btn-primary"

  %div.half-split-right.semi-tall.top-margin
    %h3 Steps Feed
    = render 'shared/p_steps_feed'
